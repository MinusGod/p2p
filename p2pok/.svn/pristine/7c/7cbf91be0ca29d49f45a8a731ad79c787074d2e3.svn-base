<script>
    var datas=new Date();

    var getF=datas.getFullYear();
    var getM=datas.getMonth()+1;

    var ryw_d=document.getElementById("ryw_d");
    if(getF!=2017){
        ryw_d.style.display='none';

    }
    if(getM > 2){
        ryw_d.style.display='none';
    }
    window.onscroll = function () {
        var t = document.documentElement.scrollTop || document.body.scrollTop;
        var ryw_d=document.getElementById("ryw_d");
        if (t > 1400) {
            ryw_d.style.top='300px';
        }
        else if(t<410){
            ryw_d.style.top='520px';
        }
    }
</script>


